{
  "rules": {
    "rooms": {
      "$roomId": {
        ".read": true,
        ".write": true,
        ".validate": "newData.hasChildren(['id', 'code', 'hostId', 'status'])"
      }
    },
    "gameState": {
      "$roomId": {
        ".read": true,
        ".write": true,
        ".validate": "newData.hasChildren(['roomId', 'gameType', 'turnNumber'])"
      }
    },
    "players": {
      "$roomId": {
        "$playerId": {
          ".read": true,
          ".write": true,
          ".validate": "newData.hasChildren(['id', 'name', 'isOnline'])"
        }
      }
    },
    "presence": {
      "$roomId": {
        "$playerId": {
          ".read": true,
          ".write": true
        }
      }
    },
    "test": {
      ".read": true,
      ".write": true
    }
  }
}
